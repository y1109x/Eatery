<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eatery.cd.mapper.UserRoleMapper">
        <insert id="addUser">
            insert into user_role_p values(#{userId}, #{roleId})
        </insert>

        <delete id="deleteAdminsById" >
            delete from user_role_p where user_id in (
              <foreach collection="array" item="id" separator=",">
                  #{id}
              </foreach>
            )
        </delete>

    <delete id="deleteAdminById">
        delete from user_role_p where user_id=#{userId}
    </delete>


    <update id="updateUser">
        update  user_role_p set role_id=#{roleId} where user_id=#{userId}
    </update>

</mapper>